@using MyBankWebApp.DTOs
@model LoginDto

<html>
<body>
	<h1>Log in</h1>
	<hr />
	<!-- Błąd logowania -->
	@if (ViewBag.LoginError != null)
	{
		<div style="color:red;">
			@ViewBag.LoginError
		</div>
	}

	<div class="row">
		<div class="col-md-4">
			<form asp-action="Login" method="post">
				<div asp-validation-summary="All" class="text-danger"></div>
				<div class="form-group">
					<label asp-for="Email" class="control-label"></label>
					<input asp-for="Email" class="form-control" type="text" />
				</div>
				<div class="form-group">
					<label asp-for="Password" class="control-label"></label>
					<input asp-for="Password" type="password" class="form-control" />
				</div>
				<div class="form-group">
					<a asp-controller="User" asp-action="Register">Register new account</a>
					<br />
					<input type="submit" value="Submit" class="btn btn-primary" style="margin-top: 20px" />
				</div>
			</form>
		</div>
	</div>
</body>
</html>